{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "declaration": false,
        "pretty": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "strictPropertyInitialization": true,
        "esModuleInterop": true,
        "outDir": "dist"
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules",
        "*.js"
    ]
}
